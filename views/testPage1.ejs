<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MBTI TEST</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/testPage.css">
</head>

<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="/">
                    <img src="/image/main_logo.png" alt="Forest Animal Logo" id="nav-logo">
                </a>
            </div>
            <div class="title">
                <h1>Perfume MBTI Test</h1>
            </div>
        </nav>
    </header>

    <div class="container">
        <form id="aptitudeForm">
            <% for (let i = 0; i < 15; i++) { %>
                <div class="question-container">
                    <div class="question<%= i + 1 %>">
                        <p class="question-text"><%= mbtiQuestion.eiQuestions[i] %></p>
                        <div class="radio-group">
                            <div class="scale-label-left">그렇지 않다</div>
                            <% [-2, -1, 0, 1, 2].forEach((val, idx) => { %>
                                <label class="radio-label">
                                    <input type="radio" name="p1_q<%= i + 1 %>" value="<%= val %>" class="radio-input">
                                    <span class="radio-custom <%= val === 0 ? 'large' : '' %>"></span>
                                </label>
                            <% }) %>
                            <div class="scale-label-right">그렇다</div>
                        </div>
                    </div>
                </div>
            <% } %>

            <button type="submit" id="nextPage" class="submit-btn">Next Page</button>
        </form>
    

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Perfum MBTI Test</p>
    </footer>

    <script src="/js/app.js"></script>
</body>
</html>