<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MBTI TEST</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/testP.css">
</head>

<body>
    <div class="navbar-wrapper" >
        <nav class="navbar">
          <div class="home-icon">
            <a href="/">
              <img src="/image/navbar-home-icon.png" id="navbar-home-icon" style="height: 40px;"> 
            </a>
          </div>
          <div class="resultOage-Tag">
            <a href="/resultPage" style="font-size: 30px; color: white; text-decoration: none; margin-left: 15px;">
              Result Page
            </a>
          </div>
        </nav>
      </div>

    <div class="container">
        <div class="container-content">
            <% for (let i = 0; i < 15; i++) { %>
                <div class="question-container" id="question<%= i + 1 %>" style="display: <%= i === 0 ? 'block' : 'none' %>">
                    <div class="process-container">
                        <p class="process"><%= i + 1 %> / 15</p>
                    </div>
                    <div class="question-button">

                        <input type="radio" id="q<%= i + 1 %>_select1" name="q<%= i + 1 %>" value="val<%= i + 1 %>_1" onchange="nextQuestion(<%= i + 1 %>)">
                        <label for="q<%= i + 1 %>_select1" class="question-box">
                            <p class="question-text"><%= mbtiQuestion.Questions[i * 2] %></p>
                        </label><br>

                        <input type="radio" id="q<%= i + 1 %>_select2" name="q<%= i + 1 %>" value="val<%= i + 1 %>_2" onchange="nextQuestion(<%= i + 1 %>)">
                        <label for="q<%= i + 1 %>_select2" class="question-box">
                            <p class="question-text"><%= mbtiQuestion.Questions[i * 2 + 1] %></p>
                        </label><br>
                    </div>  
                </div>
            <% } %>
        </div>
    </div>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Perfum MBTI Test :: ProteinJ</p>
    </footer>

    <script src="/js/app.js"></script>
    <script>

    function nextQuestion(currentQuestion) {
        // 현재 질문 숨기기
        document.getElementById(`question${currentQuestion}`).style.display = 'none';
        
        // 다음 질문이 있으면 보여주기
        if (currentQuestion < 15) {
            document.getElementById(`question${currentQuestion + 1}`).style.display = 'block';
        } else {
            // 마지막 질문이면 결과 페이지로 이동하는 로직 추가
            submitForm();
        }
    }

    function submitForm() {
        // 모든 답변을 수집하고 결과 페이지로 전송하는 로직
        let answers = {};
        for (let i = 1; i <= 15; i++) {
            const selected = document.querySelector(`input[name="q${i}"]:checked`);
            if (selected) {
                answers[`q${i}`] = selected.value;
            }
        }

        // 결과를 서버로 전송
        fetch('/submit', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(answers)
        })
        .then(response => response.json())
        .then(data => {
            // 결과 페이지로 이동
            window.location.href = '/resultPage';
        })
        .catch(error => console.error('Error:', error));
    }
        
    </script>
</body>
</html>