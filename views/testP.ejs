            </div>
                
            <div class="radio-group-container">
                <label class="radio-label">
                    <input type="radio" name="p1_q1" value="-2" class="radio-input">
                    <span class="radio-custom"></span>
                </label>
                <label class="radio-label">
                    <input type="radio" name="p1_q1" value="-1" class="radio-input">
                    <span class="radio-custom"></span>
                </label>
                <label class="radio-label">
                    <input type="radio" name="p1_q1" value="0" class="radio-input">
                    <span class="radio-custom large"></span>
                </label>
                <label class="radio-label">
                    <input type="radio" name="p1_q1" value="1" class="radio-input">
                    <span class="radio-custom"></span>
                </label>
                <label class="radio-label">
                    <input type="radio" name="p1_q1" value="2" class="radio-input">
                    <span class="radio-custom"></span>
                </label>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Perfum MBTI Test :: ProteinJ</p>
    </footer>

    <script src="/js/app.js"></script>
